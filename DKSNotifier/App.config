<?xml version="1.0" encoding="utf-8"?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5"/>
    </startup>
	<appSettings>
		
		<!-- включение/отключение поиска информации о сотрудниках -->
		<add key="CheckDismissial" value="True"/><!-- уволенные сотрудники -->
		<add key="CheckMoving" value="True"/><!-- перевод сотрудников -->
		<add key="CheckVacation" value="True"/><!-- отпуска сотрудников -->		
				
		<!-- настройки почтового сервера -->
		<add key="EmailServerName" value="86000-app016"/><!-- имя (адрес) почтового (SMTP) сервера -->
		<add key="EmailServerPort" value="25"/><!-- порт почтового сервера -->
		<add key="EmailFrom" value="dks-notifier@dks.ru"/><!-- адрес отправителя -->
		<add key="EmailTo" value="dks-notifier8600@nalog.ru"/><!-- адрес(а) получателя(ей) -->
		<add key="EmailSend" value="True" /><!-- включение/отключение направления уведомлений по почте -->
		
		<!-- каталог выгрузки html-файлов с найденной информацией (увольнения, перводе, отпуске)
		(аналогичная информация направляется по почте) -->
		<add key="DirOut" value=".\HtmlOut" />
		
	</appSettings>
	<connectionStrings>
		<!-- строка подключения к MS SQL серверу ПК "ДКС" -->
		<add name="Mssql" connectionString="Server=86000-app036;Database=dks_r;Integrated Security=True"/>
	</connectionStrings>
</configuration>
